# Environment Configuration for Synapse Agenda
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# PostgreSQL Database
POSTGRES_USER=synapse
POSTGRES_PASSWORD=synapse_password
POSTGRES_DB=synapse_db

# Backend Configuration
PORT=3000
DATABASE_URL=postgresql://synapse:synapse_password@postgres:5432/synapse_db?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Frontend Configuration
VITE_API_URL=http://localhost:3000

# Docker Build Target (development|production)
FRONTEND_TARGET=development
